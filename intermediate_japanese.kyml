format: mp3
duration: 06:06.524
id: e01e2b78-6e1e-4164-9a6d-ea2f541de45e
subtitles:
  - id: 17ed7bca-b143-4cab-b1e4-a68ac718555b
    type: External
    chunksMetadata:
      count: 125
      endCue: 18111.95
