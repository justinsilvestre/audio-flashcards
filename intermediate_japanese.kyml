id: c0c343b4-d46b-4ef0-a41a-115cc030f231
subtitles:
  - id: c88a5ee3-b59c-4242-bc5c-1a81ce617c34
    type: External
    chunksMetadata:
      count: 164
      endCue: 25715.15
