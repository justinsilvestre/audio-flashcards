name: Tobira_L13-1_yomimono_1.mp3
format: mp3
duration: 03:22.762
id: e9febc78-6b46-4001-b35e-3c34bb9f9416
subtitles:
  - id: cb2c9d84-1ee9-44d0-95cb-21eafcd07dd3
    type: External
    chunksMetadata:
      count: 57
