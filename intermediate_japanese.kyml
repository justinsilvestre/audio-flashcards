name: Tobira_L03-1_yomimono.mp3
format: mp3
duration: 05:24.702
id: 569c353c-2595-4105-b0b4-13e6224967fa
subtitles:
  - id: 549d749b-7b62-436c-9a03-84d95fd5531f
    type: External
    chunksMetadata:
      count: 82
      endCue: 16166.35
